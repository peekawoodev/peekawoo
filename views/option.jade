extends layout

block content
    body.gender-page(oncontextmenu='return false;')
        #pd1380184526508.pd-embed
        .head.peekawoo-logo
        .container
        form(method='get', action='/process', id='option')
            .gender-container
                    center
                        .choose-gender-box
                            p.text-gender1 Who do you want to chat?
                            p.text-gender2 Please select gender.
                            .container.chick-container
                                button#but-male.male(type='button', title='MALE')
                                    input(type='radio', id='gender-m', name='gender-m', value='female', hidden='true')
                                button#but-female.female(type='button', title='FEMALE')
                                    input(type='radio', id='gender-f', name='gender-f', value='male', hidden='true')
                                button#but-random.randuser(type='button', title='RANDOM')
                                    input(type='radio', id='gender-r', name='gender-r', value='randale', hidden='true')
                            .text-gender-container
                                p.text-gender5 Username
                                    input#username(type='text', name='codename', maxlength='8',title='Must be at least 2 characters.')
                                    button#b4submit.modalInput(type='button', rel='#prompt')
                                        button#submitNow(type='submit', name='submit', hidden='true')
                        .modal_credit#prompt
                            //yes button id: #submitYes, if yes:redirect sa apptivate
                            button#submitYes.btn.btn-success.btn-lg.buyBtn(type='button') Buy now
                            //no button id: #submitNo, if no:continue to process
                            button#submitNo.btn.btn-default.btn-sm.skipBtn(type='button') Skip!
                script
                    $('#submitYes').click(function(ev){
                        //if the user accepts to buy credits, redirect to apptivate
                        var url = 'http://www.apptivate.co/peekawoo';
                        $(location).attr('href',url);
                    });
                    $('#submitNo').click(function(ev){
                        //if the user do not accept to buy credits, continue to loading
                        $('#submitNow').click();
                    });
    script
        $('#username').tooltip()
        $('#but-male').tooltip();
        $('#but-female').tooltip();
        $('#but-random').tooltip();
